{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2019",
      "dom"
    ],
    "downlevelIteration": true,
    "jsx": "react",
    "strict": true,
    "checkJs": false,
    "allowJs": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "types": ["node", "jest"]
  },
  "include": [
    "src/js/**/*"
  ]
}

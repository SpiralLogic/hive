{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "esModuleInterop": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "downlevelIteration": true,
    "jsx": "react",
    "jsxFactory": "h",
    "strict": true,
    "checkJs": false,
    "allowJs": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": true,
    "noImplicitAny": true,
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "src/js/**/*",
    "jest.setup.ts"
  ]
}

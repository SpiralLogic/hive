{
  "version": "1.0.0",
  "name": "hive-frontend",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./src/dist",
    "clean-test": "npm ci && npm run test",
    "test": "npm run tsc && npx jest --coverage",
    "rollup": "npx rollup -c rollup.config.js",
    "tsc": "npx tsc -b",
    "build": "npm run tsc && npm run rollup",
    "start": "npm run build && npm test",
    "watch": "npx rollup -w -c rollup.config.js & npx tsc --build --watch & dotnet watch -v -p ../Hive.Api run &",
    "watch-win": "start npx rollup -w -c rollup.config.js && start npx tsc --build --watch && start dotnet watch -v -p ../Hive.Api run &"
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^4.1.2",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/preact": "^1.0.2",
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "chalk": "^4.0.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jest-dom": "^2.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "jest-cli": "^26.0.1",
    "prettier": "^2.0.5",
    "rollup": "^2.12.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-postcss": "^3.1.1",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "fast-equals": "^2.0.0",
    "preact": "^10.4.4"
  }
}

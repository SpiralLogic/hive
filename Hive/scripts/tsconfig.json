{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "outDir": "dist/",
    "strict": true,
    "checkJs": false,
    "allowJs": false,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist/",
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": true,
    "importHelpers": false,
    "downlevelIteration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "dist", "**/*.spec.ts", "**/*.spec.tsx"]
}

<?xml version="1.0" encoding="utf-8" ?>

<SonarQubeAnalysisProperties  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.sonarsource.com/msbuild/integration/2015/1">

  <Property Name="sonar.host.url">https://sonarqube.lab.sorijen.net.au</Property>

  <Property Name="sonar.sources">/source/src/Hive.FrontEnd/src</Property>
  <Property Name="sonar.test.inclusions">/source/src/Hive.FrontEnd/test/src,/source/src/Hive.Api.Tests,/source/src/Hive.Domain.Tests</Property>
  <Property Name="sonar.coverage.exclusions">**/src/index.tsx</Property>
  <Property Name="sonar.typescript.tsconfigPath">/source/src/Hive.FrontEnd/tsconfig.json</Property>

  <Property Name="sonar.css.stylelint.reportPaths">reports/__lint__/stylelint.json</Property>
  <Property Name="sonar.cs.opencover.reportsPaths">reports/api-coverage.opencover.xml,reports/domain-coverage.opencover.xml</Property>
  <Property Name="sonar.javascript.lcov.reportPaths">reports/__coverage__/lcov.info</Property>
  <Property Name="sonar.eslint.reportPaths">reports/__lint__/eslint.json,reports/__lint__/eslint.test.json</Property>


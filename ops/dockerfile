FROM docker-registry/node as node-build

WORKDIR /source
COPY ./src/FrontEnd .
RUN npm install -g pnpm
RUN pnpm install
RUN pnpm run build

FROM docker-registry/dotnet/sdk AS dotnet-build
WORKDIR /source

# copy and publish app and libraries
COPY ./src .
RUN dotnet publish -c release -o /app

# final stage/image
FROM docker-registry/dotnet/aspnet
WORKDIR /app
COPY --from=dotnet-build /app .
COPY --from=node-build /source/public ./wwwroot
ENTRYPOINT ["./Hive.Api"]

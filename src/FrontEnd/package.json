{
  "version": "1.0.0",
  "name": "hive",
  "private": true,
  "scripts": {
    "clean": "git clean -x -d -f $(git rev-parse --show-toplevel)/**",
    "test": "pnpx tsc --noEmit && npx jest --coverage",
    "build-dev": "pnpx tsc --noEmit && pnpx esbuild ./src/index.tsx --bundle  --sourcemap  --outfile=./public/js/index.js",
    "build": "pnpx tsc --noEmit && pnpx esbuild ./src/index.tsx --bundle  --minify --outfile=./public/js/index.js",
    "prestart": "pnpm run clean && pnpm run build-dev && pnpx copyfiles -u 1 \"./public/**/*\" ../Api/Hive.Api/wwwroot",
    "start": "dotnet watch -v -p ../Api/Hive.Api run",
    "preinstall": "npx only-allow pnpm"
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/preact": "^2.0.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/testing-library__jest-dom": "^5.9.5",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "chalk": "^4.1.0",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.8.39",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jest-dom": "^3.6.5",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sort-imports-es6-autofix": "0.5.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@microsoft/signalr": "^5.0.2",
    "fast-equals": "^2.0.0",
    "preact": "^10.5.12"
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "coverageDirectory": "./src/__tests__/__coverage__",
    "collectCoverage": true,
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "roots": [
      "./src/"
    ],
    "setupFilesAfterEnv": [
      "./src/jest.setup.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ],
    "testMatch": [
      "./**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageProvider": "v8",
    "verbose": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "prettier/@typescript-eslint"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest",
      "sort-imports-es6-autofix"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/no-var-requires": "off",
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error",
      "sort-imports-es6-autofix/sort-imports-es6": 2
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "rules": {
          "@typescript-eslint/explicit-function-return-type": "off"
        }
      }
    ],
    "settings": {
      "propWrapperFunctions": [
        "forbidExtraProps",
        {
          "property": "freeze",
          "object": "Object"
        },
        {
          "property": "myFavoriteWrapper"
        }
      ],
      "linkComponents": [
        "Hyperlink",
        {
          "name": "Link",
          "linkAttribute": "to"
        }
      ]
    },
    "ignorePatterns": [
      "node_modules",
      "/*.config.js",
      "/*.config.ts",
      "**/coverage/**"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}

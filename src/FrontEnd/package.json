{
  "version": "1.0.0",
  "name": "hive",
  "private": true,
  "scripts": {
    "esbuild:dev": "pnpx esbuild --loader:.svg=text --jsx-factory=h --jsx-fragment=Fragment --define:process.env.NODE_ENV=\\\"development\\\" ./src/index.tsx --bundle  --sourcemap  --outfile=./public/js/hive.js",
    "esbuild": "pnpx esbuild --loader:.svg=text --jsx-factory=h --jsx-fragment=Fragment --define:process.env.NODE_ENV=\\\"production\\\" ./src/index.tsx --bundle --minify --outfile=./public/js/hive.js",
    "esbuild:watch": "pnpx esbuild --loader:.svg=text --inject:./src/react-shim.js   --define:process.env.NODE_ENV=\\\"development\\\" ./src/index.tsx --bundle  --sourcemap --watch --outfile=./public/js/hive.js",
    "clean:deep": "git clean -x -d -f $(git rev-parse --show-toplevel)/**",
    "tsc": "pnpx tsc --noEmit",
    "jest": "pnpx jest --coverage ",
    "test": "npm-run-all -s tsc jest",
    "web-copy": "pnpx cpy ./src/index.html ./public/",
    "cache-bust": "pnpx cachebust -n",
    "build:dev": "npm-run-all -s tsc esbuild:dev web-copy cache-bust",
    "clean": "pnpx rimraf ./public/js/**",
    "build": "npm-run-all -s clean tsc esbuild web-copy cache-bust",
    "start": "dotnet watch -v -p ../Api/Hive.Api run",
    "preinstall": "npx only-allow pnpm",
    "watch": "npm-run-all -s clean web-copy esbuild:watch ",
    "dotnet:watch": "npm-run-all -s web-copy esbuild:dev"
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "devDependencies": {
    "@sparkbox/cachebust": "^0.3.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/preact": "^2.0.1",
    "@testing-library/user-event": "^13.0.10",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@types/testing-library__jest-dom": "^5.9.5",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "chalk": "^4.1.0",
    "cpy-cli": "^3.1.1",
    "esbuild": "0.9.6",
    "eslint": "^7.22.0",
    "eslint-config-kentcdodds": "^17.6.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-jest-dom": "^3.6.5",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sort-imports-es6-autofix": "0.6.0",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@microsoft/signalr": "^5.0.4",
    "preact": "^10.5.13"
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "coverageDirectory": "./src/__tests__/__coverage__",
    "collectCoverage": true,
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/src/styleMock.js"
    },
    "roots": [
      "./src/"
    ],
    "setupFilesAfterEnv": [
      "./src/jest.setup.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ],
    "testMatch": [
      "./**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageProvider": "v8",
    "verbose": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "kentcdodds/possible-errors",
      "kentcdodds/best-practices",
      "kentcdodds/es6/possible-errors",
      "kentcdodds/import",
      "kentcdodds/jest",
      "plugin:prettier/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/no-var-requires": "off",
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error"
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "rules": {
          "@typescript-eslint/explicit-function-return-type": "off"
        }
      }
    ],
    "settings": {
      "react": {
        "pragma": "h"
      },  "propWrapperFunctions": [
        "forbidExtraProps",
        {
          "property": "freeze",
          "object": "Object"
        }
      ],
      "linkComponents": [
        "Hyperlink",
        {
          "name": "Link",
          "linkAttribute": "to"
        }
      ]
    },
    "ignorePatterns": [
      "/node_modules/*/**",
      "/*.config.js",
      "/src/public/*/**",
      "**/coverage/**"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 110,
    "proseWrap": "always",
    "jsxBracketSameLine": true
  },
  "cachebust": {
    "source": [
      "./public/js/hive.js",
      "./public/js/hive.css"
    ],
    "target": [
      "./public/index.html"
    ]
  }
}

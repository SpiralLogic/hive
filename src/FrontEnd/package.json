{
  "version": "1.0.0",
  "name": "hive",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./src/dist",
    "clean-test": "npm ci && npm run test",
    "test": "npm run tsc && npx jest --coverage",
    "rollup": "npx rollup -c rollup.config.js",
    "tsc": "npx tsc -b",
    "build": "npm run tsc && npm run rollup",
    "start": "npm run build && npm test",
    "watch": "npx rollup -w -c rollup.config.js & npx tsc --build --watch & dotnet watch -v -p ../Api/Hive.Api run &",
    "watch-win": "start npx rollup -w -c rollup.config.js && start npx tsc --build --watch && start dotnet watch -v -p ../Api/Hive.Api run"
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/preact": "^2.0.0",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.4.2-alpha.12",
    "@typescript-eslint/parser": "^4.4.1",
    "chalk": "^4.1.0",
    "esbuild": "^0.7.19",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jest-dom": "^3.2.3",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.0",
    "jest-cli": "^26.6.0",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.3",
    "typescript": "^4.1.0-beta"
  },
  "dependencies": {
    "fast-equals": "^2.0.0",
    "preact": "^10.5.5"
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "coverageDirectory": "./src/__tests__/__coverage__",
    "collectCoverage": true,
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "roots": [
      "./src/"
    ],
    "setupFilesAfterEnv": [
      "./src/jest.setup.ts"
    ],
    "coveragePathIgnorePatterns": ["/node_modules/","/__tests__/"],
    "testMatch": [
      "./**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageProvider": "v8",
    "verbose": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "prettier/@typescript-eslint"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "rules": {
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-unused-vars": "off"
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "rules": {
          "@typescript-eslint/explicit-function-return-type": "off"
        }
      }
    ],
    "settings": {
      "propWrapperFunctions": [
        "forbidExtraProps",
        {
          "property": "freeze",
          "object": "Object"
        },
        {
          "property": "myFavoriteWrapper"
        }
      ],
      "linkComponents": [
        "Hyperlink",
        {
          "name": "Link",
          "linkAttribute": "to"
        }
      ]
    },
    "ignorePatterns": [
      "node_modules",
      "/*.config.js",
      "/*.config.ts",
      "**/coverage/**"
    ]
  }
}

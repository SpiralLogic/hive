{
  "version": "1.0.0",
  "name": "hive",
  "private": true,
  "scripts": {
    "esbuild:dev": "pnpx esbuild --loader:.svg=text --jsx-factory=h --jsx-fragment=Fragment --define:process.env.NODE_ENV=\\\"development\\\" ./src/index.tsx --bundle  --sourcemap  --outfile=./public/js/hive.js",
    "esbuild": "pnpx esbuild --loader:.svg=text --jsx-factory=h --jsx-fragment=Fragment --define:process.env.NODE_ENV=\\\"production\\\" ./src/index.tsx --bundle --minify --outfile=./public/js/hive.js",
    "clean": "git clean -x -d -f $(git rev-parse --show-toplevel)/**",
    "test": "pnpx tsc --noEmit && npx jest --coverage",
    "build:dev": "pnpx rimraf ./public/js/** && pnpx tsc --noEmit && pnpm run esbuild:dev && pnpx cpy ./src/index.html ./public/ && pnpx cachebust -n",
    "build": "pnpx tsc --noEmit && pnpm run esbuild  && pnpx cpy ./src/index.html ./public/ && pnpx cachebust -n",
    "start": "dotnet watch -v -p ../Api/Hive.Api run",
    "preinstall": "npx only-allow pnpm",
    "watch": " pnpx rimraf ./public/js/** && pnpx cpy ./src/index.html ./public/ && pnpx esbuild --loader:.svg=text --inject:./src/react-shim.js   --define:process.env.NODE_ENV=\\\"development\\\" ./src/index.tsx --bundle  --sourcemap --watch --outfile=./public/js/hive.js",
    "build:watch": "pnpx cpy ./src/index.html ./public/ && pnpm run esbuild:dev"
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "devDependencies": {
    "@sparkbox/cachebust": "^0.3.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/preact": "^2.0.1",
    "@testing-library/user-event": "^12.8.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/testing-library__jest-dom": "^5.9.5",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "chalk": "^4.1.0",
    "cpy-cli": "^3.1.1",
    "esbuild": "0.8.49",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jest-dom": "^3.6.5",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sort-imports-es6-autofix": "0.5.0",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.2",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "@microsoft/signalr": "^5.0.3",
    "fast-equals": "^2.0.0",
    "preact": "^10.5.12"
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "coverageDirectory": "./src/__tests__/__coverage__",
    "collectCoverage": true,
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "roots": [
      "./src/"
    ],
    "setupFilesAfterEnv": [
      "./src/jest.setup.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ],
    "testMatch": [
      "./**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageProvider": "v8",
    "verbose": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "prettier/@typescript-eslint"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest",
      "sort-imports-es6-autofix"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/no-var-requires": "off",
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error",
      "sort-imports-es6-autofix/sort-imports-es6": 2
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "rules": {
          "@typescript-eslint/explicit-function-return-type": "off"
        }
      }
    ],
    "settings": {
      "propWrapperFunctions": [
        "forbidExtraProps",
        {
          "property": "freeze",
          "object": "Object"
        },
        {
          "property": "myFavoriteWrapper"
        }
      ],
      "linkComponents": [
        "Hyperlink",
        {
          "name": "Link",
          "linkAttribute": "to"
        }
      ]
    },
    "ignorePatterns": [
      "node_modules",
      "/*.config.js",
      "/*.config.ts",
      "**/coverage/**"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 110,
    "proseWrap": "always",
    "jsxBracketSameLine": true
  },
  "cachebust": {
    "source": [
      "./public/js/hive.js",
      "./public/js/hive.css"
    ],
    "target": [
      "./public/index.html"
    ]
  }
}

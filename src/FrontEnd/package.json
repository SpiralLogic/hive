{
  "version": "1.0.0",
  "name": "hive",
  "private": true,
  "scripts": {
    "build:dotnet:watch": "dotnet watch -v -p ../Api/Hive.Api run",
    "clean": "rimraf ./src/dist && rimraf ./.build-cache",
    "pretest": "npm ci",
    "test": "npm run build:tsc && npx jest --coverage",
    "build:rollup": "npx rollup -c rollup.config.js",
    "build:rollup:watch": "npx rollup --watch -c rollup.config.js ",
    "build:tsc": "npx tsc -b",
    "build:tsc:watch": "npx tsc -b -w",
    "build": "npm run build:tsc && npm run build:rollup",
    "start:win": "start npm run build:tsc:watch && start npm run build:rollup:watch && start npm run build:dotnet:watch"
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{ts,tsx}": "eslint --fix"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/preact": "^2.0.0",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.10",
    "@types/react": "^16.9.53",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.5.0",
    "chalk": "^4.1.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jest-dom": "^3.2.3",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "jest": "^26.6.0",
    "jest-cli": "^26.6.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-postcss": "^3.1.8",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.3",
    "typescript": "^4.1.0-beta"
  },
  "dependencies": {
    "fast-equals": "^2.0.0",
    "preact": "^10.5.5"
  }
}

{

  "clearMocks": true,
  "coverageDirectory": "./reports/__coverage__",
  "collectCoverage": true,
  "coverageReporters": [
    "lcov",
    "text"
  ],
  "moduleDirectories": [
    "node_modules"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "testEnvironment": "jsdom",
  "moduleNameMapper": {
    "\\.(css)$": "<rootDir>/test/style-mock.js"
  },
  "roots": [
    "./src/",
    "./test/"
  ],
  "setupFilesAfterEnv": [
    "./test/jest.setup.ts"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/test/"
  ],
  "testMatch": [
    "./**/*.{spec,test}.{js,jsx,ts,tsx}"
  ],
  "transform": {
    "^.+\\.tsx?$": [
      "esbuild-jest",
      {
        "sourcemap": true,
        "loaders": {
          ".spec.ts": "tsx"
        }
      }
    ]
  },
  "coverageProvider": "v8",
  "verbose": true
}

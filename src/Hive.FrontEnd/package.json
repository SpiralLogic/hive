{
  "version": "1.4.0",
  "name": "hive",
  "private": true,
  "scripts": {
    "clean": "rimraf ./public/js/**",
    "clean:deep": "git clean -x -d -f $(git rev-parse --show-toplevel)/**",
    "preinstall": "npx only-allow pnpm",
    "start": "dotnet watch -v -p ../Hive.Api run",
    "test": "vitest run -c vitest.config.ts --reporter=junit",
    "test:all": "npm-run-all -s tsc test lint:report",
    "test:ui": "vitest  --ui",
    "webstorm-integration": "vitest --watch --reporter=dot --reporter=json --outputFile=.vitest-result.json",
    "tsc": "tsc --noEmit",
    "lint": "npm-run-all -p lint:src lint:test lint:style",
    "lint:fix": "npm-run-all -p lint:src:fix lint:test:fix lint:style:fix",
    "lint:report": "npm-run-all -p lint:src lint:src:report lint:test lint:test:report lint:style lint:style:report",
    "lint:src": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs src",
    "lint:src:fix": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs --fix src",
    "lint:src:report": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs -o reports/__lint__/eslint.json -f json src",
    "lint:style": "stylelint src/**/*.css",
    "lint:style:fix": "stylelint --fix src/**/*.css",
    "lint:style:report": "stylelint -f json src/**/*.css > reports/__lint__/stylelint.json",
    "lint:test": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs test",
    "lint:test:fix": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs --fix test",
    "lint:test:report": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs -o reports/__lint__/eslint.test.json -f json test",
    "build": "npm-run-all -s clean vite:build",
    "build:dev": "npm-run-all -s tsc vite:dev",
    "build:dev:watch": "npm-run-all -s vite:watch",
    "vite:build": "vite build --emptyOutDir",
    "vite:dev": "vite build --mode development --emptyOutDir",
    "vite:watch": "vite build -w",
    "watch": "npm-run-all -s clean vite:watch"
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/preact": "^3.2.2",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^18.11.9",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "@typescript-eslint/typescript-estree": "^5.42.1",
    "@vitest/coverage-c8": "^0.25.1",
    "@vitest/coverage-istanbul": "^0.25.1",
    "@vitest/ui": "^0.25.1",
    "camelcase": "^7.0.0",
    "chalk": "^5.1.2",
    "eslint": "^8.27.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-jest": "^27.1.5",
    "eslint-plugin-jest-dom": "4.0.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-testing-library": "^5.9.1",
    "eslint-plugin-unicorn": "^44.0.2",
    "fsevents": "^2.3.2",
    "globals": "^13.17.0",
    "jsdom": "^20.0.2",
    "prettier": "^2.7.1",
    "stylelint": "^14.15.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "vitest": "^0.25.1"
  },
  "dependencies": {
    "@microsoft/signalr": "^7.0.0",
    "@preact/preset-vite": "^2.4.0",
    "cross-env": "^7.0.3",
    "esbuild": "0.15.14",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "preact": "^10.11.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4",
    "vite": "^3.2.3"
  },
  "engines": {
    "node": ">=17",
    "pnpm": ">=6"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core"
      ]
    }
  }
}
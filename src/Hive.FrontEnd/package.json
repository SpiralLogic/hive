{
  "version": "1.4.0",
  "name": "hive",
  "private": true,
  "main": "./src",
  "scripts": {
    "clean": "rimraf ./public/js/**",
    "clean:deep": "git clean -x -d -f $(git rev-parse --show-toplevel)/**",
    "preinstall": "npx only-allow pnpm",
    "start": "dotnet watch -v -p ../Hive.Api run",
    "test": "npm-run-all -s tsc jest lint",
    "tsc": "tsc --noEmit",
    "jest": "jest -c jest.config.json --coverage",
    "lint": "npm-run-all -p lint:src lint:test lint:style",
    "lint:fix": "npm-run-all -p lint:src:fix lint:test:fix lint:style:fix",
    "lint:report": "npm-run-all -p lint:src lint:src:report lint:test lint:test:report lint:style lint:style:report",
    "lint:src": "eslint -c .eslintrc src",
    "lint:src:fix": "eslint -c .eslintrc --fix src",
    "lint:src:report": "eslint -c .eslintrc -o reports/__lint__/eslint.json -f json src",
    "lint:style": " stylelint src/**/*.css",
    "lint:style:fix": "stylelint --fix src/**/*.css",
    "lint:style:report": "stylelint -f json src/**/*.css > reports/__lint__/stylelint.json",
    "lint:test": "eslint -c .eslintrc test",
    "lint:test:fix": "eslint -c .eslintrc --fix test",
    "lint:test:report": "eslint -c .eslintrc -o reports/__lint__/eslint.test.json -f json test",
    "build": "npm-run-all -s clean esbuild",
    "esbuild": "node build.js",
    "build:dev": "npm-run-all -s tsc esbuild:dev",
    "build:dev:watch": "npm-run-all -s esbuild:watch",
    "esbuild:dev": "cross-env NODE_ENV=development node build.js",
    "watch": "npm-run-all -s clean esbuild:watch",
    "esbuild:watch": "cross-env NODE_ENV=development WATCH=true node build.js"
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.14.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/preact": "^3.2.2",
    "@testing-library/user-event": "^14.2.1",
    "@types/jest": "^27.5.2",
    "@types/node": "^17.0.42",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@typescript-eslint/typescript-estree": "^5.29.0",
    "chalk": "^5.0.1",
    "eslint": "^8.18.0",
    "eslint-config-kentcdodds": "^20.3.1",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-jest-dom": "4.0.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "0.6.0",
    "eslint-plugin-testing-library": "^5.5.1",
    "eslint-plugin-unicorn": "^42.0.0",
    "fsevents": "^2.3.2",
    "jest": "^27.5.1",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "ts-jest": "^27.1.5",
    "ts-node": "^10.8.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@microsoft/signalr": "^6.0.6",
    "cross-env": "^7.0.3",
    "esbuild": "0.14.48",
    "npm-run-all": "^4.1.5",
    "preact": "^10.7.2",
    "rimraf": "^3.0.2"
  }
}

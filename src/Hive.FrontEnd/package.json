{
  "version": "1.4.0",
  "name": "hive",
  "private": true,
  "scripts": {
    "clean": "rimraf ./public",
    "clean:deep": "git clean -x -d -f $(git rev-parse --show-toplevel)/**",
    "start": "dotnet watch -v -p ../Hive.Api run",
    "test": "vitest run -c vitest.config.ts",
    "test:report": "vitest run -c vitest.config.ts",
    "test:all": "run-p tsc test lint",
    "test:all:report": "run-p tsc test:report lint:report",
    "test:ui": "vitest --ui",
    "webstorm-integration": "vitest --watch --reporter=dot --reporter=json --outputFile=.vitest-result.json",
    "tsc": "tsc --noEmit",
    "lint": "run-p lint:src lint:test lint:style",
    "lint:fix": "run-p lint:src:fix lint:test:fix lint:style:fix",
    "lint:report": "run-p lint:src lint:src:report lint:test lint:test:report lint:style lint:style:report",
    "lint:src": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs src",
    "lint:src:fix": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs --fix src",
    "lint:src:report": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs -o reports/__lint__/eslint.json -f json src",
    "lint:style": "stylelint src/**/*.css",
    "lint:style:fix": "stylelint --fix src/**/*.css",
    "lint:style:report": "stylelint -f json src/**/*.css > reports/__lint__/stylelint.json",
    "lint:test": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs test",
    "lint:test:fix": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs --fix test",
    "lint:test:report": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs -o reports/__lint__/eslint.test.json -f json test",
    "build": "run-s clean vite:build",
    "build:dev": "run-s tsc vite:dev",
    "build:dev:watch": "run-s vite:watch",
    "vite:build": "vite build --emptyOutDir",
    "vite:dev": "cross-env NODE_ENV=development vite build --manifest --sourcemap=true --mode development",
    "vite:watch": "cross-env NODE_ENV=development vite build --manifest  --sourcemap=true --mode development -w",
    "watch": "run-s clean vite:watch"
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/preact": "^3.2.3",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^20.4.2",
    "@types/testing-library__jest-dom": "^5.14.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/typescript-estree": "^6.0.0",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/coverage-istanbul": "^0.33.0",
    "@vitest/ui": "^0.33.0",
    "camelcase": "^7.0.1",
    "chalk": "^5.3.0",
    "eslint": "^8.45.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-testing-library": "^5.11.0",
    "eslint-plugin-unicorn": "^48.0.0",
    "eslint-plugin-use-encapsulation": "^1.1.0",
    "eslint-plugin-vitest": "^0.2.6",
    "fsevents": "^2.3.2",
    "globals": "^13.20.0",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.0",
    "stylelint": "^15.10.1",
    "stylelint-config-standard": "^34.0.0",
    "vitest": "^0.33.0"
  },
  "dependencies": {
    "@microsoft/signalr": "^7.0.9",
    "@preact/preset-vite": "^2.5.0",
    "@preact/signals": "^1.1.5",
    "@vitest/coverage-v8": "^0.33.0",
    "cross-env": "^7.0.3",
    "esbuild": "0.18.13",
    "lint-staged": "^13.2.3",
    "npm-run-all2": "^6.0.6",
    "preact": "^10.16.0",
    "rimraf": "^5.0.1",
    "typescript": "5.1.6",
    "vite": "^4.4.4"
  },
  "engines": {
    "node": ">=19",
    "pnpm": ">=8"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core"
      ]
    }
  }
}

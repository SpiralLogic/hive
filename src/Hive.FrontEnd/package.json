{
  "version": "1.4.0",
  "name": "hive",
  "private": true,
  "main": "./src",
  "scripts": {
    "clean": "pnpx rimraf ./public/js/**",
    "clean:deep": "git clean -x -d -f $(git rev-parse --show-toplevel)/**",
    "preinstall": "npx only-allow pnpm",
    "start": "dotnet watch -v -p ../Hive.Api run",
    "test": "npm-run-all -s tsc jest lint",
    "tsc": "pnpx tsc --noEmit",
    "jest": "pnpx jest -c jest.config.json --coverage ",
    "lint": "npm-run-all -s lint:src lint:test",
    "lint:src": "pnpx eslint -c .eslintrc --fix src",
    "lint:src:report": "pnpx eslint -c .eslintrc --fix -o reports/__lint__/eslint.json -f json src",
    "lint:test": "pnpx eslint -c .eslintrc --fix test",
    "lint:test:report": "pnpx eslint -c .eslintrc --fix -o reports/__lint__/eslint.test.json -f json test",
    "build": "npm-run-all -s clean esbuild",
    "esbuild": "node build.js",
    "build:dev": "npm-run-all -s tsc esbuild:dev",
    "build:dev:watch": "npm-run-all -s esbuild:watch",
    "esbuild:dev": "cross-env NODE_ENV=development node build.js",
    "watch": "npm-run-all -s clean esbuild:watch",
    "esbuild:watch": "cross-env NODE_ENV=development WATCH=true node build.js"
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.11.2",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/preact": "^2.0.1",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@types/testing-library__jest-dom": "^5.14.2",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "@typescript-eslint/typescript-estree": "^5.10.0",
    "chalk": "^5.0.0",
    "eslint": "^8.7.0",
    "eslint-config-kentcdodds": "^20.0.1",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-jest-dom": "4.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "0.6.0",
    "eslint-plugin-testing-library": "^5.0.4",
    "eslint-plugin-unicorn": "^40.1.0",
    "fsevents": "^2.3.2",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@microsoft/signalr": "^6.0.1",
    "cpy-cli": "^3.1.1",
    "cross-env": "^7.0.3",
    "esbuild": "0.14.12",
    "npm-run-all": "^4.1.5",
    "preact": "^10.6.4",
    "rimraf": "^3.0.2"
  },
  "pnpm": {
    "overrides": {
      "ansi-regex@>2.1.1 <5.0.1": ">=5.0.1",
      "glob-parent@<5.1.2": ">=5.1.2",
      "node-fetch": ">=3.1.1"
    }
  }
}